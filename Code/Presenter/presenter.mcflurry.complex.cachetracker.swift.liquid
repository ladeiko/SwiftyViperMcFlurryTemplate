    // MARK: Helpers

    private func adaptModels(_ list: [CacheTransaction<{{ prefix }}{{ module_info.name }}ModuleEntityModel>]) -> [CacheTransaction<{{ prefix }}{{ module_info.name }}ModuleEmbeddableModel>] {
        var result = [CacheTransaction<{{ prefix }}{{ module_info.name }}ModuleEmbeddableModel>]()
        for item in list {
            switch item.type {
            case .insert, .update, .move:
                var embeddableModule: {{ prefix }}{{ module_info.name }}EmbeddableModule!
                let key = item.model!.uniqueKeyValue()
                embeddableModule = embeddableModulesCache[key]
                if embeddableModule == nil {
                    embeddableModule = router.createEmbeddableModule(with: item.model!)
                    embeddableModulesCache[key] = embeddableModule
                }
                let model = {{ prefix }}{{ module_info.name }}ModuleEmbeddableModel(model: item.model!, embed: embeddableModule.embed )
                result.append(CacheTransaction<{{ prefix }}{{ module_info.name }}ModuleEmbeddableModel>(model: model, index: item.index, newIndex: item.newIndex, type: item.type))

            case .delete:
                let key = item.model!.uniqueKeyValue()
                let model = {{ prefix }}{{ module_info.name }}ModuleEmbeddableModel(model: item.model!)
                embeddableModulesCache.removeValue(forKey: key)
                result.append(CacheTransaction<{{ prefix }}{{ module_info.name }}ModuleEmbeddableModel>(model: nil, index: item.index, newIndex: item.newIndex, type: item.type))
            }
        }
        return result
    }

